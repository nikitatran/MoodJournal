<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sapphire</item>
        <item name="colorPrimaryDark">@color/sapphire</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">#00000000</item> <!-- Requires api 21 -->
        <item name="android:windowBackground">@drawable/toolbar_gradient</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textPercent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/percentTextSize</item>
    </style>

    <style name="emojiImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/imageHeight</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="myCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="cardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/cardPadding</item>
    </style>


</resources>
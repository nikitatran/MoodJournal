<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="390dp"
        android:layout_height="361dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="267dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sadTitle"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:text="Sad:" />

                <TextView
                    android:id="@+id/sadValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/happyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy" />

                <TextView
                    android:id="@+id/happyValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:layout_width="310dp"
                android:layout_height="36dp">

                <TextView
                    android:id="@+id/ExcitedTitle"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:text="excited" />

                <TextView
                    android:id="@+id/excitedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/angryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angry:" />

                <TextView
                    android:id="@+id/angryValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/fearTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="fear" />

                <TextView
                    android:id="@+id/fearValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/boredTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bored" />

                <TextView
                    android:id="@+id/boredValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </TableRow>

        </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
